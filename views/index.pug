extends layout

block content
  h1= title

  if user 
    p Welcome back #{user.name} 
  
  else 
    a(href='/user/login') Login

  hr 

  div.posts-container 
    if posts===null 
      p There are no posts in the database.
    
    if posts 
      h2 Posts:
      ul 
        each post in posts 
          li 
            if user 
              h3 
                a(href=post.url) #{post.title}  
              p= post.text 
              p By: #{post.author.name}
              p= post.date
            else 
              h3= post.title 
              p= post.text 

  hr 

  if user 
    div.footer-member
    if user.member_status===false  
      a(href='/user/become-elite') Become Elite  
    if user.member_status===true 
      a(href='/post/create') Create Post 
      
    div.footer-logout
      a(href='/user/logout') Log Out
